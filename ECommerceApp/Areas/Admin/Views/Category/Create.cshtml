@* @page *@
@model EXommerceApp.Models.Models.Category;
@* *@
@* @{ *@
@*     Layout = null; *@
@* } *@

<div class="card-header  bg-white ml-0 py-3 shadow rounded-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-black py-2">Create Category</h2>
        </div>
    </div>
    
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3">
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>

                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" type="number" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2">Display Order</label>

                    <span class="text-danger" asp-validation-for="DisplayOrder"></span>
                </div>
                <!--Buttons-->
                <div class="row pt-2">
                    <div class="col-6  col-md-3">
                        <button class="btn btn-primary form-control" type="submit" />Create
                    </div>
                    <div class="col-6 col-md-3">
                        <a  asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </form> 
    </div>

</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
