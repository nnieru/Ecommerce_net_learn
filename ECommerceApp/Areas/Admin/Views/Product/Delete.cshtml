@model Product

<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-3 mt-3">
        <div>
            <h2>Delete Product</h2>
        </div>

        <div asp-validation-summary="All"></div>

        <div class="py-2 col-12">
            <label asp-for="Title" class="ms-2"></label>
            <input asp-for="Title" type="text" class="form-control" disabled/>
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="py-2 col-12">
            <label asp-for="Author" class="ms-2"></label>
            <input asp-for="Author" type="text" class="form-control" disabled/>
            <span class="text-danger" asp-validation-for="Author"></span>
        </div>

        <div class="py-2 col-12">
            <label asp-for="ISBN" class="ms-2"></label>
            <input asp-for="ISBN" type="text" class="form-control" disabled/>
            <span class="text-danger" asp-validation-for="ISBN"></span>
        </div>

        <div class="py-2 col-12">
            <label asp-for="Description" class="ms-2"></label>
            <textarea asp-for="Description" class="form-control" disabled></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <div class="py-2 col-12">
            <label asp-for="ListPrice" class="ms-2"></label>
            <input asp-for="ListPrice" type="number" class="form-control" disabled/>
            <span class="text-danger" asp-validation-for="ListPrice"></span>
        </div>

        <div class="py-2 col-12">
            <label asp-for="Price" class="ms-2"></label>
            <input asp-for="Price" type="number" class="form-control" disabled/>
            <span class="text-danger" asp-validation-for="Price"></span>
        </div>

        <div class="py-2 col-12">
            <label asp-for="Price50" class="ms-2"></label>
            <input asp-for="Price50" type="number" class="form-control" disabled/>
            <span class="text-danger" asp-validation-for="Price50"></span>
        </div>

        <div class="py-2 col-12">
            <label asp-for="Price100" class="ms-2"></label>
            <input asp-for="Price100" type="number" class="form-control" disabled/>
            <span class="text-danger" asp-validation-for="Price100"></span>
        </div>

        <div class="row pt-2">
            <div class="col-6 col-md-3 ">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>

            <div class="col-6 col-md-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back to product list</a>
            </div>

        </div>
    </div>
</form>
